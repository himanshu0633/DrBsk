      <div className="order-page-container" style={{ minHeight: '100vh', padding: '20px', background: '#f5f5f5' }}>
        <div className="order-layout" style={{ display: 'flex', maxWidth: '1200px', margin: '0 auto' }}>
          {/* Sidebar */}
          <aside className="order-sidebar" style={{ width: '250px', background: 'white', borderRadius: '8px', padding: '20px', marginRight: '20px' }}>
            <div className="sidebar-header">
              <h3 style={{ margin: '0 0 10px 0', color: '#333' }}>Hello {userData?.name}</h3>
